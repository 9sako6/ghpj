{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "rules": {
    "eol-last": "error",
    "quotes": ["error", "single"],
    "semi": "error",
    "ImportDeclaration": "off",
    "no-unused-vars": "off"
  },
  "ignorePatterns": ["dist/*"]
}
